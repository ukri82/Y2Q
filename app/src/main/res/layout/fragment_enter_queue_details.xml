<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/card_background"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="com.y2.y2q.EnterQueueDetailsFragment"
>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:orientation="horizontal">

        <TextView android:id="@+id/queue_number_label"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Queue Number"
                  android:textColor="@color/primary_text"
                  android:textSize="24sp"/>

        <EditText android:id="@+id/queue_number"
                  android:layout_width="@dimen/subscribe_button_size"
                  android:layout_height="wrap_content"
                  android:background="@drawable/edit_text_background"
                  android:inputType="number"
                  android:textColor="@color/primary_text"
                  android:textSize="48sp"/>

    </LinearLayout>

    <include layout="@layout/new_queue_slot_card"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
    ></include>

    <FrameLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:id="@+id/dummy"
                    android:layout_weight="1">
    </FrameLayout>

</LinearLayout>
