<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.y2.y2q.ScanQRFragment"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:gravity="center"
              android:background="@color/card_background">


    <ImageButton android:id="@+id/scan_qr_code"
                 android:layout_width="@dimen/subscribe_button_size"
                 android:layout_height="@dimen/subscribe_button_size"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 android:scaleType="fitCenter"
                 android:src="@drawable/qr_code_scan"/>

    <Button style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="256dp"
            android:layout_height="96dp"
            android:text="Scan QR Code"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="30sp"
            android:id="@+id/queue_qr_button"/>


</LinearLayout>


